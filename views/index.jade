#dashboard.container
  h1 Builds
  ul#builds
    - each instruction in instructions
      li
        article.instruction(data-instruction-id=instruction.__id__)
          ul.data
            li.avatar
              - if (instruction.last_build)
                img(src=instruction.last_build.gravatar_of_size(50), width="50")
              - else
                img(src="/images/avatar.png", width="50")

            li.title
              h1= instruction.name

            li.last-build last build:
              - if (instruction.last_build)
                strong(class=instruction.last_build.succeeded ? 'success': 'failure')
                  a(href=instruction.last_build.permalink)= instruction.last_build.message + ' ('+instruction.last_build.duration+')';
              - else
                strong Never

          ul.menu
            li.output
              a(href="#") Show output

            li.build
              a(href="#", emerald-action="run", emerald-entity="BuildInstruction", rel=instruction.__id__) Build Now

          ol.buildlog
            - each build in instruction.all_builds
              li(class=build.succeeded ? "success" : "failure")
                a(href=build.permalink)= "#" + build.__id__ + " &mdash; " + build.message;
