html
  head
    title= title
    link(rel='stylesheet', href='/stylesheets/bootstrap.min.css', type='text/css')
    link(rel='stylesheet', href='/stylesheets/general.css', type='text/css')
    link(rel='stylesheet', href='/stylesheets/jquery.gritter.css', type='text/css')

    script(type="text/javascript", src="/javascripts/jquery-1.6.2.min.js")
    script(type="text/javascript", src="/javascripts/jquery.gritter.min.js")
    script(type="text/javascript", src="/javascripts/bootstrap-alerts.js")
    script(type="text/javascript", src="/javascripts/bootstrap-modal.js")
    script(type="text/javascript", src="/javascripts/bootstrap-buttons.js")
    script(type="text/javascript", src="/javascripts/bootstrap-twipsy.js")
    script(type="text/javascript", src="/javascripts/bootstrap-popover.js")
    script(type="text/javascript", src="/socket.io/socket.io.js")
    script(type="text/javascript", src="/javascripts/main.js")
    script(type="text/javascript")!= "(function(window){window.emerald = " + emerald_json + ";})(window)"

  body
    block body
      #progress-bar
        .inset
          .label 0%
          .bar
          span.status
          img.gif(src="/images/progress-bar-loader.gif")

    a#fork_me_on_github(target="_blank", href="https://github.com/Yipit/emerald")
      span Fork me on GitHub!

    header
      .container
        .row
          .span13
            h1.title
              a(href="/") Emerald

          .span3
            - if (user.email)
              menu.user
                li.avatar
                  img(src=user.gravatar_of_size("25"), width="25", height="25")
                li= user.name
                li.stuff
                  a(href="/profile") profile
                  span |
                  a(href="/logout") exit
            - else
              menu.user
                li.login
                  span please
                  a(href="/login?next=" + request.url) login

        .row
          .span8: p
          .span8
            menu.main
              li.dashboard
                a(href="/") dashboard
              li.instructions
                a(href="/instructions") build instructions
              li.users
                a(href="/users") users

    != body
    #terminal-wrapper
      a.toggle-terminal(href="#") Show/Hide current build
      pre#terminal.hidden
